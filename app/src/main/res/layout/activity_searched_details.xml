<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchedDetailsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Details"
        android:layout_gravity="center_horizontal"
        android:textSize="54sp"
        android:textStyle="bold"
        android:textColor="#F40707"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/name_user_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammad Sadique"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/email_user_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sadique008@gmail.com"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/phone_user_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8726403478"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website : "
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/website_cmpy_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.org.webkul.in"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/address_cmpy_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PVR sector 63 Noida"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Details : "
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/company_details_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT software company"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>