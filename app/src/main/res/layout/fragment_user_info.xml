<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#f0f011"
    tools:context=".UserInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/info_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammad Sadique"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/info_email_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sadique008@gmail.com"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/info_phone_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8726403478"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website : "
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/info_website_cmpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.org.webkul.in"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/info_address_cmpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PVR sector 63 Noida"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Details : "
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/info_company_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IT software company"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>