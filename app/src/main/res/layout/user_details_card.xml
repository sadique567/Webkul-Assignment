<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/userdetails_card"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    app:contentPaddingLeft="5dp"
    app:contentPaddingTop="4dp"
    app:contentPaddingBottom="4dp"
    app:contentPaddingRight="10dp"
    app:cardBackgroundColor="#EBFBF9">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohammad Sadique"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/email_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sadique008@gmail.com"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/phone_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8726403478"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website : "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/website_cmpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.org.webkul.in"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/address_cmpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PVR sector 63 Noida"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Details : "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/company_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT software company"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>